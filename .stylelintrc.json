{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      "dollar-variables",
      "custom-properties",
      "at-rules",
      "less-mixins",
      "declarations",
      "rules"
    ],
    "declaration-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested",
          "after-comment",
          "after-declaration"
        ]
      }
    ],
    "scss/percent-placeholder-pattern": null
  }
}